describe("Core", () => {
  it("It should visit a link from the crm", () => {
    cy.fixture("request").then((f) => {
      cy.visit(f.url);
      cy.get("body", { timeout: 10000 }).should("contain", "Dear");
    });
  });
  it.only("Should generate a shortlink when 'build reference is called'", () => {
    cy.request('http://localhost:5001/rumpelstiltskin-8cadf/us-central1/testBed?type=createToken').then(req => {
      const body = JSON.parse(req.body).res
      console.log(body)
      cy.visit(`https://${body.value}`)
      cy.get('body',{timeout: 10000}).should('contain','John')

    })
    
  })
});
