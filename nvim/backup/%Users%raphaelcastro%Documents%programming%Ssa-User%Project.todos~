      -() date of birth
      -() party size
    }
    #[Tell Us About Yourself] {
      -() state of residence
      #[Marital Status] {
        -() selection='icon'
        -() conditional >> 'married || co-hab -> asks for spouse age'
      }
    }
  }
  #[Submit Button] {
    >> -() color=green
    >> -() text='see available destinations'
    >> -() enabled='form valid'
  }
}
