let cs = 0;
const stackInfo = {} 
function reverseStringRecursive(str) {
    console.log('Callstack: ', ++cs, ',  Input: ', str);
    if (str.length <= 1) {
        console.log('Callstack: ', cs, ', Output: ', str);
        return str;
    }
    const rev = reverseStringRecursive(str.slice(1, str.length)) + str.slice(0, 1);
    console.log('Callstack: ', --cs, ', Output: ', rev);
    stackInfo[cs] = {
        input: str,
        output: rev
    }
    return rev;
}

// const string = 'RafaMegaPooBOiiiIiIiIiii';
const string = 'ABCDE';
const reversedString = reverseStringRecursive(string);
console.log('Reversed String: ', reversedString);
console.log(stackInfo)
